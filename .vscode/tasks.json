{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "compile",
      "dependsOrder": "sequence",
      "dependsOn": ["compile-lexer", "compile-lexer-class", "exec-lexer"],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      }
    },
    {
      "label": "compile-jflex-lexer",
      "type": "shell",
      "command": "java",
      "args": ["-jar", "./lib/jflex-full-1.8.2.jar", "./src/Lexer/lang.flex"],
      "problemMatcher": [],
      "presentation": {
        "reveal": "never"
      }
    },
    {
      "label": "compile-lexer-java",
      "type": "shell",
      "command": "javac",
      "args": ["./src/Lexer/*.java", "-d", "./build"],
      "problemMatcher": [],
      "presentation": {
        "reveal": "never"
      }
    },
    {
      "label": "test-lexer",
      "type": "shell",
      "command": "java",
      "args": ["./build/Lexer", "./samples/sintantic/true/data.lan"],
      "problemMatcher": [],
      "presentation": {
        "reveal": "never"
      }
    }
  ]
}
